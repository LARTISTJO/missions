{% extends 'base.html.twig' %}

{% block title %}Studies index{% endblock %}

{% block body %}
    <h1>Studies index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
        {% for study in studies %}
            <tr>
                <td>{{ study.title }}</td>
                <td>{{ study.description }}</td>
                <td>{{ study.image }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_studies_new') }}">Create new</a>
{% endblock %}
