{% extends 'base.html.twig' %}

{% block title %}Themes index{% endblock %}


{% block body %}
    <h1>Themes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for theme in themes %}
            <tr>
                <td>{{ theme.id }}</td>
                <td>{{ theme.title }}</td>
                <td>{{ theme.description }}</td>
                <td>{{ theme.image }}</td>
                <td>
                    <a href="{{ path('app_themes_show', {'id': theme.id}) }}">show</a>
                    <a href="{{ path('app_themes_edit', {'id': theme.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_themes_new') }}">Create new</a>
{% endblock %}
