{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 class="text-center mb-3">Profil</h1>
    <div class="d-flex justify-content-center">
        <table class="table w-25 table-bordered table-striped">
            <tbody>
                <tr>
                    <th>Prénom</th>
                    <td>{{ user.firstname }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ user.lastname }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <a class="d-flex justify-content-center" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier compte</a>
    {#  <a class="d-flex justify-content-center" href="{{ path('app_themes_edit', {'id': theme.id}) }}">Modifier thème</a> #}
    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
