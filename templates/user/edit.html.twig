{% extends 'base.html.twig' %}

{% block title %}Modifier profil{% endblock %}

{% block body %}
    <div>
        <div class="row justify-content-center">
            <div class="col-xl-6 col-md-10 bgform p-4 mb-5">
                <h1 class="text-center">Modifier Profil</h1>
                {{ form_start(userform) }}
                <div class="row">
                    <div class="col">
                        {{ form_row(userform.lastname, {'attr': {'placeholder': 'b'}}) }}
                    </div>
                    <div class="col">
                        {{ form_row(userform.firstname) }}
                    </div>
                </div>
                <div class="row">
                    {{ form_row(userform.email.first) }}
                    {{ form_row(userform.email.second) }}
                    {{ form_row(userform.password.first) }}
                    {{ form_row(userform.password.second) }}
                </div>

                {{ include('user/_form.html.twig', {'button_label': 'Modifier profil'}) }}

                {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}

